<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".AdminTaskActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="E Voting System"
            android:textAlignment="center"
            android:paddingLeft="5dp"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/textviewlogo"
            android:drawableLeft="@drawable/vote"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="4"
            android:layout_gravity="">

            <TextView
                android:id="@+id/adname"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textColor="#000"
                android:textSize="20sp" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="50sp">

    <!--    <Button android:id="@+id/ad_btnannounce_result"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/lbutton"
            android:textColor="#ffff"
            android:text="Annouce Result "/>-->

        <Button
            android:id="@+id/ad_btn_insert_candidate"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/lbutton"
            android:text="Insert Candiadte "
            android:textColor="#ffff" />

        <Button
        android:id="@+id/ad_btn_anaylis"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/lbutton"
        android:layout_marginTop="25dp"
        android:textColor="#ffff"
        android:text="Analysis "/>
        <Button
            android:id="@+id/ad_btn_votestaus"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/lbutton"
            android:layout_marginTop="25dp"
            android:textColor="#ffff"
            android:text="Status "/>
</LinearLayout>
    <Button
        android:id="@+id/btnAdminlogout"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="250dp"
        android:text="Logout"
        android:textAlignment="textStart"
        android:paddingLeft="20dp"
        android:clickable="true"
        android:textColor="#000"
        android:paddingRight="10dp"
        android:drawableRight="@drawable/logout"
        android:background="@drawable/forlogout"
        />

</LinearLayout>


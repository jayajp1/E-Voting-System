<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".resultcarditems">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/forcardview"
            android:orientation="horizontal"
            android:weightSum="8">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="4"
                android:layout_weight="2.6">
                <ImageView
                    android:id="@+id/rcimgview1"
                    android:layout_width="55dp"
                    android:layout_height="25dp"
                    android:background="@drawable/forimage"
                    android:layout_weight="2.5"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />
                <TextView
                    android:id="@+id/rcvtv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RANJANBEN BHATT"
                    android:layout_weight="1.2"
                    android:textSize="12dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.2"
                android:orientation="vertical"
                android:weightSum="4">

                <TextView
                    android:id="@+id/vtddcv1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text=""
                    android:layout_weight="0.8"
                    android:textSize="12dp"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/rcimgview2"
                    android:layout_height="0dp"
                    android:layout_weight="1.6"
                   />

                <TextView
                    android:id="@+id/rcvtv2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text=""
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:weightSum="10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="2.5"
                    android:fontFamily="@font/g_bold"
                    android:gravity="center"
                    android:text="Total Votes"
                    android:textSize="11dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#000"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/rcvotecount"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:layout_gravity="center"
                    android:fontFamily="@font/g_bold"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="26dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
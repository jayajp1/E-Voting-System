<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    tools:context=".Signup1">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:text="E Voting System"
        android:textAlignment="center"
        android:paddingLeft="5dp"
        android:textSize="25sp"
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/textviewlogo"
        android:drawableLeft="@drawable/vote"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="#fff"
        android:orientation="vertical"
        android:weightSum="2">

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:background="#9FAFAE"
            android:text="Registration Form"
            android:textColor="#000"
            android:clickable="false"
            android:textSize="18dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/bpersonal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Personal Details"
            android:textColor="#ffff"
            android:clickable="true"
            android:background="#000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/signupback"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="6">




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:text="Full Name : "
                android:textColor="#000"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/ufname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="@drawable/regedittext"
                android:gravity="center"
                android:hint="Enter Full Name"
                android:textColor="#000"
                android:textColorHint="#656D65"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:text="Mobile Number : "
                android:textColor="#000"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/umobileno"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="@drawable/regedittext"
                android:gravity="center"
                android:hint="+91999xxxxxxx"
                android:inputType="phone"
                android:textColor="#000"
                android:textColorHint="#656D65"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:layout_weight="2"

                android:paddingLeft="10dp"
                android:text="Birth date : "
                android:textColor="#000"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/udob"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="@drawable/regedittext"
                android:gravity="center"
                android:hint="Enter  Birth date"
                android:inputType="date"
                android:textColor="#000"
                android:textColorHint="#656D65"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Address : "
                android:textColor="#000"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/uAddress"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="@drawable/regedittext"
                android:gravity="center"
                android:hint="Enter Address"
                android:inputType="textMultiLine|text"
                android:textColor="#000"
                android:textColorHint="#656D65"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:layout_weight="2"

                android:paddingLeft="10dp"
                android:text="@string/Country"
                android:textColor="#000"
                android:textSize="14dp" />

            <Spinner
                android:id="@+id/ucountry"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="@drawable/regedittext"
                android:entries="@array/country_name"
                android:gravity="center"
                android:textColor="#000"
                android:textColorHint="#656D65"
                android:textSize="18dp" />
            <!--
            <EditText
                android:id="@+id/ucountry"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="@drawable/regedittext"
                android:gravity="center"
                android:hint="Enter Country Name"
                android:textColor="#000"
                android:textColorHint="#656D65"
                android:textSize="18dp" />
                -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:text="@string/State"
                android:textColor="#000"
                android:textSize="14dp" />

            <Spinner
                android:id="@+id/ustate"
                android:layout_width="0dp"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="@drawable/regedittext"
                android:entries="@array/state_name"
                android:gravity="center"
                android:textColor="#000"
                android:textColorHint="#656D65"
                android:textSize="18dp" />
            <!--
            <EditText
                android:id="@+id/ustate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="@drawable/regedittext"
                android:gravity="center"
                android:hint="Enter State Name"
                android:textColor="#000"
                android:textColorHint="#656D65"
                android:textSize="18dp" />
                -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:text="@string/City"
                android:textColor="#000"
                android:textSize="14dp" />

            <Spinner
                android:id="@+id/ucity"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="@drawable/regedittext"
                android:gravity="center"
                android:textColor="#000"
                android:textColorHint="#656D65"
                android:textSize="18dp" />
            <!--
            <EditText
                android:id="@+id/ucity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="@drawable/regedittext"
                android:gravity="center"
                android:hint="Enter City Name"
                android:textColor="#000"
                android:textColorHint="#656D65"
                android:textSize="18dp" />
            -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Username : "
                android:textColor="#000"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/usname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="@drawable/regedittext"
                android:gravity="center"
                android:hint="vt_username"
                android:textColor="#000"
                android:textColorHint="#656D65"
                android:textSize="18dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:text="Password : "
                android:textColor="#000"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/uspass"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="@drawable/regedittext"
                android:gravity="center"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:textColor="#000"
                android:textColorHint="#656D65"
                android:textSize="18dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:text="Confirm Password"
                android:textColor="#000"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/uscpass"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="@drawable/regedittext"
                android:gravity="center"
                android:hint="Enter Confirm Password"
                android:inputType="textPassword"
                android:textColor="#000"
                android:textColorHint="#656D65"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Age : "
                android:textColor="#000"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/uage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="@drawable/regedittext"
                android:gravity="center"
                android:hint="Enter Age"
                android:inputType="number"
                android:textColor="#000"
                android:textColorHint="#656D65"
                android:textSize="18dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:text="Email_Id : "
                android:textColor="#000"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/uemail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="@drawable/regedittext"
                android:gravity="center"
                android:hint="Enter Email_Id"
                android:inputType="textEmailAddress"
                android:textColor="#000"
                android:textColorHint="#656D65"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="2"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="Gender: "
                android:textColor="#000"
                android:textSize="14dp" />

            <RadioGroup
                android:id="@+id/ugender"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <RadioButton
                    android:id="@+id/umale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"

                    android:text="Male" />

                <RadioButton
                    android:id="@+id/ufemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"

                    android:text="Female" />

                <RadioButton
                    android:id="@+id/utransgen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:text="Other" />
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/bverification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Verification"
            android:textColor="#ffff"
            android:clickable="true"
            android:background="#000"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/signupback"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:text="Adharcard : "
                android:textColor="#000"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/uadhar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="@drawable/regedittext"
                android:gravity="center"
                android:hint="(last 10 digits)Adharcard"
                android:inputType="number"
                android:textColor="#000"
                android:textColorHint="#656D65"
                android:textSize="18dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:weightSum="6">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:text="Election card : "
                android:textColor="#000"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/uelection"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="@drawable/regedittext"
                android:gravity="center"
                android:hint="(last 10 digits)Electiocard"
                android:inputType="number"
                android:textColor="#000"
                android:textColorHint="#656D65"
                android:textSize="18dp" />

        </LinearLayout>
<!--
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:text="Fingerprint : "
                android:textColor="#000"
                android:textSize="14dp" />

            <Button
                android:layout_width="0dp"
                android:id="@+id/fingerprint"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:layout_marginTop="10dp"
                android:background="#566565"
                android:textSize="14dp"
                android:text="Scan"
                android:layout_marginBottom="20dp"
                android:textColor="#FFF"/>

        </LinearLayout>
        -->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/brsubvt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="20sp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:text="Submit"
            android:textColor="#ffff"
            android:clickable="true"/>

        <Button
            android:id="@+id/breset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="30sp"
            android:layout_weight="1"
            android:text="Reset"
            android:background="@drawable/ripple"
            android:textColor="#ffff" />
    </LinearLayout>

</LinearLayout>

</ScrollView>
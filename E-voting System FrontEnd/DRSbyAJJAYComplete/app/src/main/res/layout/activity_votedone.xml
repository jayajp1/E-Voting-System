<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:weightSum="9"
    tools:context=".Votedone">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="E Voting System"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="#000"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/textviewlogo"
            android:drawableLeft="@drawable/vote"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/aftervote"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="123dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@drawable/vtdne"
            android:foregroundGravity="center" />

        <TextView
            android:id="@+id/vtdunaame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:fontFamily="@font/g_light"
            android:text=""
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="22dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Thank You For Your Vote"
            android:fontFamily="@font/g_bold"
            android:textAlignment="center"
            android:textSize="30dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2.5"
            android:fontFamily="@font/g_light"
            android:gravity="center"
            android:text="We will announce result soon.."
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="22dp" />
    </LinearLayout>
</LinearLayout>